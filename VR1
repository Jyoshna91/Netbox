import paramiko
import pynetbox
import re
import os

# NetBox and device configuration
NETBOX_URL = 'http://10.133.35.137:8000'
NETBOX_TOKEN = 'b10f953429d54bcbe45a24445161f863b202089b'
virtual_device_ip = '10.133.35.133'
device_name = 'VR1'
virtual_device_username = 'tcs'
virtual_device_password = 'tcs12345'

# Initialize NetBox API
nb = pynetbox.api(NETBOX_URL, token=NETBOX_TOKEN)

def get_enp0s3_details():
    """Retrieve IPv4, IPv6, and MAC address for the enp0s3 interface from the virtual device (133)."""
    ssh_client = paramiko.SSHClient()
    ssh_client.set_missing_host_key_policy(paramiko.AutoAddPolicy())
    
    try:
        print("Connecting to virtual device (133)...")
        ssh_client.connect(virtual_device_ip, username=virtual_device_username, password=virtual_device_password)
        
        # Run the command to get IP addresses
        print("Running 'ip address' command on virtual device (133)...")
        stdin, stdout, stderr = ssh_client.exec_command("ip address")
        output = stdout.read().decode()
        print("Output from 'ip address':\n", output)

        # Focus on the enp0s3 section only
        enp0s3_section = re.search(r"2: enp0s3.*?(?=^\d+:|\Z)", output, re.DOTALL | re.MULTILINE)
        if not enp0s3_section:
            print("Could not find enp0s3 interface in the output.")
            return None, None, None

        enp0s3_output = enp0s3_section.group(0)
        print("enp0s3 section:\n", enp0s3_output)

        # Extract IPv4, IPv6, and MAC addresses from enp0s3 section
        ipv4_match = re.search(r"inet\s+(\d+\.\d+\.\d+\.\d+)", enp0s3_output)
        ipv6_match = re.search(r"inet6\s+([a-fA-F0-9:]+)", enp0s3_output)
        mac_match = re.search(r"link/ether\s+([0-9a-fA-F:]{17})", enp0s3_output)

        ipv4_address = ipv4_match.group(1) if ipv4_match else None
        ipv6_address = ipv6_match.group(1) if ipv6_match else None
        mac_address = mac_match.group(1) if mac_match else None

        print("Extracted IPv4:", ipv4_address)
        print("Extracted IPv6:", ipv6_address)
        print("Extracted MAC Address:", mac_address)

        return ipv4_address, ipv6_address, mac_address

    except Exception as e:
        print(f"An error occurred while connecting to the virtual device: {e}")
        return None, None, None
    finally:
        ssh_client.close()

def run_arp_scan():
    """Run arp-scan on the local physical server (137) and retrieve the MAC address for the virtual device IP (133)."""
    print("Running 'arp-scan --localnet' on physical server (137)...")
    arp_scan_output = os.popen("sudo arp-scan --localnet").read()
    print("Output from 'arp-scan':\n", arp_scan_output)
    
    # Search for the MAC address of the virtual device IP
    arp_match = re.search(rf"{virtual_device_ip}\s+([0-9a-fA-F:]{17})", arp_scan_output)
    if arp_match:
        mac_from_arp_scan = arp_match.group(1)
        print("Found MAC Address in arp-scan:", mac_from_arp_scan)
        return mac_from_arp_scan
    else:
        print("MAC Address not found for the virtual device IP in arp-scan output.")
        return None

def update_netbox_device(ipv4_address, ipv6_address, mac_address, status):
    """Update the device in NetBox with IPs, MAC address, and status."""
    device = nb.dcim.devices.get(name=device_name)
    if device:
        print(f"Updating device '{device_name}' in NetBox...")
        update_data = {
            "status": status,
            "custom_fields": {
                "Mac address": mac_address  # Ensure this matches the exact name in NetBox
            }
        }
        if ipv4_address:
            update_data["primary_ip4"] = ipv4_address
        if ipv6_address:
            update_data["primary_ip6"] = ipv6_address

        device.update(update_data)
        print(f"Device '{device_name}' updated in NetBox with:")
        print(f" - IPv4 Address: {ipv4_address}")
        print(f" - IPv6 Address: {ipv6_address}")
        print(f" - MAC Address: {mac_address}")
        print(f" - Status: {status}")
    else:
        print(f"Device '{device_name}' not found in NetBox.")

# Main script execution
ipv4_address, ipv6_address, mac_address_from_ip_command = get_enp0s3_details()
mac_address_from_arp_scan = run_arp_scan()

if mac_address_from_ip_command and mac_address_from_arp_scan:
    # Compare MAC addresses to determine device status
    status = "active" if mac_address_from_ip_command == mac_address_from_arp_scan else "offline"
    
    # Update NetBox with device IP, MAC, and status information
    update_netbox_device(ipv4_address, ipv6_address, mac_address_from_ip_command, status)
else:
    print("Failed to retrieve MAC address information from either the virtual device or the arp-scan output.")
